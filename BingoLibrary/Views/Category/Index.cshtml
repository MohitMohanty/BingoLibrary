@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Modification"/>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Category Lists</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="create" class="btn btn-primary">
             <i class="bi bi-plus-circle"></i>  Create New Books
            </a>
        </div>
    </div>
    <br/><br/>
    <hr/>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-square"></i> Edit</a>
                             <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                              <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
